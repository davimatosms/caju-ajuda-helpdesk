<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.cajuajuda.cajuajudadesktop.controller.ChamadosController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Painel do Técnico - Chamados Abertos" styleClass="title-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="chamadosTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="slaColumn" prefWidth="40.0" text="SLA" />

                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="tituloColumn" prefWidth="250.0" text="Título" />
                <TableColumn fx:id="clienteColumn" prefWidth="150.0" text="Cliente" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="prioridadeColumn" prefWidth="100.0" text="Prioridade" />
                <TableColumn fx:id="dataColumn" prefWidth="130.0" text="Data de Abertura" />
            </columns>
        </TableView>
    </children>
</VBox>